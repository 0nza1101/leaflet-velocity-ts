{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "target": "es5",
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2016",
        "dom"
      ]
    },
    "exclude": [
        "node_modules",
        "old"
    ]
  }
